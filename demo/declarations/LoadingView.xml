<?xml version="1.0" encoding="UTF-8"?>
<JPopup
        xmlns="org.aswing"
        xmlns:geom="org.aswing.geom"
        xmlns:haxe="http://haxe.org/">
    <JPanel opaque="true">
        <background>
            <ASColor rgb="0xcccccc" alpha="0.5"/>
        </background>
        <layout>
            <CenterLayout/>
        </layout>
        <JProgressBar indeterminate="true">
            <preferredSize>
                <geom:IntDimension width="100" height="20"/>
            </preferredSize>
        </JProgressBar>
    </JPanel>
</JPopup>