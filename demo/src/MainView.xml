<?xml version="1.0" encoding="UTF-8"?> 
<Window xmlns="jive" xmlns:chart="jive.chart" xmlns:geom="jive.geom" xmlns:e="empty" xmlns:haxe="http://haxe.org/"
    width="Metric.absolute(Std.int(Lib.current.stage.stageWidth))" height="Metric.absolute(Std.int(Lib.current.stage.stageHeight))"> 
    <haxe:Implements><![CDATA[jive.DataContextControllable<MainViewModel>]]></haxe:Implements> 
    
    <Container
        width="Metric.percent(80)"
        height="Metric.percent(80)">

        <chart:Chart id="chart1" 
            data="{Binding chartData mode=oneway}" 
            title="{Binding chartTitle}"
            width="Metric.percent(80)"
            height="Metric.percent(80)">

            <xAxis><chart:Axis axisName="time" axisUnit="t"/></xAxis>
            <yAxis><chart:Axis axisName="value" axisUnit="v"/></yAxis>
        </chart:Chart> 
         
        <!-- <chart:ChartPeriodSelector id="chart2" 
            data="{Binding chartData mode=oneway}" 
            selectedData="{Binding selectedChartData mode=twoway}" 
            width="Metric.percent(100)"
            height="Metric.percent(100)"> 
        </chart:ChartPeriodSelector> -->
    </Container>

</Window>