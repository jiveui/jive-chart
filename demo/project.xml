<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Jive Chart Demo" package="jive.chart" version="0.0.1" company="" />

    <!-- output -->
    <app main="Main" file="chart" path="bin" />

    <window width="0" height="0" background="0xFFFFFF" antialiasing="4" fps="60" if="html5 || flash"/>
    <window width="0" height="0" background="0xFFFFFF" antialiasing="4" fps="125" unless="html5 || flash" />

    <!-- classpath, haxe libs -->
    <source path="src" />
    <source path="gen" />

    <haxelib name="openfl" />
    <haxelib name="jive"/>
    <haxelib name="jive-chart"/>
    <haxelib name="bindx"/>

    <template path="templates" />

    <assets path="assets" rename=""/>

</project>