<?xml version="1.0" encoding="utf-8"?>
<project>
    <meta title="Jive Chart Demo" package="jive.chart" version="0.0.1" company="" />

    <!-- output -->
    <app main="Main" file="chart" path="bin" />

    <window width="0" height="0" background="0xFFFFFF" antialiasing="4" fps="60" if="mobile"/>
    <window width="640" height="480" background="0xFFFFFF" antialiasing="4" fps="125" unless="mobile" />

    <!-- classpath, haxe libs -->
    <source path="src" />
    <source path="bin/jive/gen" />

    <haxelib name="openfl" />
    <haxelib name="jive"/>
    <haxelib name="jive-chart"/>

    <haxelib name="debugger" if="debug" />
    <haxedef name="HXCPP_DEBUGGER" if="debug"/>

    <template path="templates" />

    <include path="../../jive-nativetools" if="mobile" />
    
    <haxelib name="debugger" if="debug" />
    <haxedef name="HXCPP_DEBUGGER" if="debug"/>

    <assets path="assets" rename=""/>

    <android target-sdk-version="21" />

</project>